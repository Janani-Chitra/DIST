<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <link rel="shortcut icon" href="/i.jpg" />
	<title>Reset Password</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Reset Password</h1>
<div class="panel panel-info">
    <div class="panel-heading">OTP is sent to your Email...!!!</div>
</div>

	<!-- LOGIN FORM -->
	
	<form action="/forgot1" method="post">
	          
		<div class="form-group">
			<label>Email-OTP</label>
			<input type="text" class="form-control" name="ot">
			
		</div>
		<div class="form-group">
			<label>New Password</label>
			<input type="password" class="form-control" name="password">
		</div>
		
			<input type="hidden" class="form-control" name="email" value=<%=email%> >
		   

		<button type="submit" class="btn btn-warning btn-lg">submit</button>
	</form>

	<hr>

	
	<p>Or go to<a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
